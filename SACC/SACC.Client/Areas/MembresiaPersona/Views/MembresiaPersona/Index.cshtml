@{
    Layout = "~/Views/Shared/_LayoutMembresia.cshtml";
}


@section Scripts {
    @if (TempData["lblNombre"] != null) {
        <script type="text/javascript">
            $("#lblNombre").html('@TempData["lblNombre"]');
            $("#imgFoto").attr('src', '@TempData["imgFoto"]');
        </script>
    };

    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/Persona/CtrlUserBusquedaPersona.js"   asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/Parentesco/Parentesco.js"             asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/MembresiaPersona/MembresiaPersona.js" asp-append-version="true"></script>
}


<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><span>Membresia </span></li>
                    <li><span>Club Salud </span></li>
                    <li class="active"><span>Persona </span></li>
                </ol>
            </div>

            <h2 class="font-light m-b-xs">Membresia Persona</h2>
            <small>Asignacion de Beneficiarios.</small>
        </div>
    </div>
</div>


<div class="content animate-panel">
    <div class="row rowTabDatosGenerales">
        <div class="col-lg-12">
            <div class="hpanel hnova">
                <div class="panel-heading hbuilt">
                    <div class="panel-tools"></div>

                    <button id="btnAgregar" onclick="MembresiaPersona.AbreModalPersona()" class="btn btn-primary btn-sm" disabled="disabled">Agregar</button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button class="btn btn-default btn-sm" onclick="MembresiaPersona.redirecciona('MEMBRESIA_INDEX');">Regresar</button>

                    <div class="pull-right" style="padding-top:5px;">
                        <span class="label label-info" style="font-size:14px;">Contratante:&nbsp;(@ViewBag.NumSocio) - @ViewBag.Contratante</span>
                        <span class="label label-primary" style="font-size:14px;" id="txtAfiliados">La membresia ampara 4 afiliados y #CantidadAdicional</span>
                    </div>
                    &nbsp;&nbsp;
                </div>

                <div class="panel-body">
                    <table id="dgDatosMembresiaPersona" data-height="430" data-classes="table table-hover table-condensed" data-striped="true" data-pagination="true"></table>
                </div>

                <div class="panel-footer">
                    <p class="text-info">
                        <strong id="txtAfiliadosRegistradosEnGrid"></strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>


