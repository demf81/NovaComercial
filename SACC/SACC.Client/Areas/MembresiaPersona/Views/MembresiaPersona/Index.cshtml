<div class="modal fade" id="myModalBusquedaPersona" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header text-center">
                <h4 class="modal-title">Selecci&oacute;n de Persona</h4>
            </div>
            <div class="modal-body">
                @{
                    Html.RenderAction("_CtrlUserBusquedaPersona", "Persona", new { Area = "Persona" });
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-default btn-sm" data-dismiss="modal">Cerrar</button>
                <button class="btn btn-primary btn-sm" onclick="MembresiaPersona.AgregarPersona()">Agregar</button>
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="txtApuntadorMembresiaPersona" value="MEMBRESIA_PERSONA_INDEX" placeholder="APUNTADOR" />


<input type="hidden" id="txtMembresiaId"                  name="txtMembresiaId"                  value="@ViewBag.MembresiaId" />
<input type="hidden" id="txtNumSocio"                     name="txtNumSocio"                     value="@ViewBag.NumSocio" />
<input type="hidden" id="txtContratante"                  name="txtContratante"                  value="@ViewBag.Contratante" />
<input type="hidden" id="txtCantidadAfiliadosRegistrados" name="txtCantidadAfiliadosRegistrados" value="@ViewBag.CantidadAfiliadosRegistrados" />
<input type="hidden" id="txtCantidadAfiliadosAmparados"   name="txtCantidadAfiliadosAmparados"   value="@ViewBag.CantidadAfiliadosAmparados" />
<input type="hidden" id="txtCantidadAdicional"            name="txtCantidadAdicional"            value="@ViewBag.CantidadAdicional" />
<input type="hidden" id="txtMembresiaEstatusId"           name="txtMembresiaEstatusId"           value="@ViewBag.MembresiaEstatusId" />