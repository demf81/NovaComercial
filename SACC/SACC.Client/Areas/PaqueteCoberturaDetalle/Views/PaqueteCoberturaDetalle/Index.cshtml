@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts {
    @if (TempData["lblNombre"] != null) {
        <script type="text/javascript">
            $("#lblNombre").html('@TempData["lblNombre"]');
            $("#imgFoto").attr('src', '@TempData["imgFoto"]');
        </script>
    };

    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/ServicioMedicoTipo/ServicioMedicoTipo.js"                   asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/ServicioMedico/CtrlUserBusquedaServicioMedico.js"           asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/Material/CtrlUserBusquedaMaterial.js"                       asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/MedicamentoCuadroTipo/MedicamentoCuadroTipo.js"             asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/Medicamento/CtrlUserBusquedaMedicamento.js"                 asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/Estudio/CtrlUserBusquedaEstudio.js"                         asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/Cirugia/CtrlUserBusquedaCirugia.js"                         asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/PaqueteCoberturaDetalle/CtrlUserPaqueteCoberturaDetalle.js" asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/PaqueteCoberturaDetalle/PaqueteCoberturaDetalle.js"         asp-append-version="true"></script>
}


<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><span>Cat&aacute;logos </span></li>
                    <li><span>Paquete de Coberturas</span></li>
                    <li class="active"><span>Configuraci&oacute;n </span></li>
                </ol>
            </div>

            <h2 class="font-light m-b-xs">Paquete de Cobertura</h2>
            <small>Configuraci&oacute;n de Paquetes.</small>
        </div>
    </div>
</div>


<div class="content contentPrimario animate-panel">
    <div class="row rowTabDatosGenerales">
        <div class="col-lg-12">
            <div class="hpanel hnova">
                <div class="panel-heading hbuilt">
                    <div class="panel-tools"></div>

                    <button class="btn btn-default btn-sm" onclick="PaqueteCoberturaDetalle.redirecciona('PAQUETE_COBERTURA_INDEX')">Regresar</button>

                    <div class="pull-right" style="padding-top:5px;">
                        <span class="label label-info" style="font-size:14px;">Paquete de Cobertura:&nbsp;(@ViewBag.PaqueteDescripcion)</span>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="col-lg-12">
                        <div class="row">
                            <div id="rootwizardDetalle" class="tabbable">
                                <ul>
                                    <li><a href="#tabD1" data-toggle="tab"><span id="span_servisio">Servicios (0)      </span></a></li>
                                    <li><a href="#tabD2" data-toggle="tab"><span id="span_material">Materiales (0)     </span></a></li>
                                    <li><a href="#tabD3" data-toggle="tab"><span id="span_medicamento">Medicamentos (0)</span></a></li>
                                    <li><a href="#tabD4" data-toggle="tab"><span id="span_estudio">Estudios (0)        </span></a></li>
                                    <li><a href="#tabD5" data-toggle="tab"><span id="span_cirugia">Cirugias (0)        </span></a></li>
                                </ul>

                                <div class="tab-content">
                                    <div class="tab-pane" id="tabD1">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-6 col-lg-offset-1">
                                                    <br />
                                                    <button class="btn btn-primary btn-sm" onclick="PaqueteCoberturaDetalle.AbreModalBusquedaServiciosMedicos()">Agregar</button>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div role="form" class="form-horizontal">
                                                    @{
                                                        Html.RenderAction("_CtrlUserServicioMedicoPaqueteCoberturaDetalleView", "PaqueteCoberturaDetalle", new { Area = "PaqueteCoberturaDetalle" });
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="tab-pane" id="tabD2">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-6 col-lg-offset-1">
                                                    <br />
                                                    <button class="btn btn-primary btn-sm" onclick="PaqueteCoberturaDetalle.AbreModalBusquedaMateriales()">Agregar</button>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div role="form" class="form-horizontal">
                                                    @{
                                                        Html.RenderAction("_CtrlUserMaterialPaqueteCoberturaDetalleView", "PaqueteCoberturaDetalle", new { Area = "PaqueteCoberturaDetalle" });
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="tab-pane" id="tabD3">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-6 col-lg-offset-1">
                                                    <br />
                                                    <button class="btn btn-primary btn-sm" onclick="PaqueteCoberturaDetalle.AbreModalBusquedaMedicamentos()">Agregar</button>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div role="form" class="form-horizontal">
                                                    @{
                                                        Html.RenderAction("_CtrlUserMedicamentoPaqueteCoberturaDetalleView", "PaqueteCoberturaDetalle", new { Area = "PaqueteCoberturaDetalle" });
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="tab-pane" id="tabD4">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-6 col-lg-offset-1">
                                                    <br />
                                                    <button class="btn btn-primary btn-sm" onclick="PaqueteCoberturaDetalle.AbreModalBusquedaEstudios()">Agregar</button>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div role="form" class="form-horizontal">
                                                    @{
                                                        Html.RenderAction("_CtrlUserEstudioPaqueteCoberturaDetalleView", "PaqueteCoberturaDetalle", new { Area = "PaqueteCoberturaDetalle" });
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="tab-pane" id="tabD5">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-6 col-lg-offset-1">
                                                    <br />
                                                    <button class="btn btn-primary btn-sm" onclick="PaqueteCoberturaDetalle.AbreModalBusquedaCirugias()">Agregar</button>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div role="form" class="form-horizontal">
                                                    @{
                                                        Html.RenderAction("_CtrlUserCirugiaPaqueteCoberturaDetalleView", "PaqueteCoberturaDetalle", new { Area = "PaqueteCoberturaDetalle" });
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel-footer">&nbsp;</div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="myModalBusquedaServicioMedico" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="color-line"></div>
            <div class="modal-header text-center">
                <h4 class="modal-title">Agregar Servicio</h4>
            </div>

            <div class="modal-body">
                @{
                    Html.RenderAction("_CtrlUserBusquedaServicioMedico", "ServicioMedico", new { Area = "ServicioMedico" });
                }
            </div>

            <div class="modal-footer">
                <button class="btn btn-default btn-sm" data-dismiss="modal">Cerrar</button>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <button class="btn btn-primary btn-sm" onclick="PaqueteCoberturaDetalle.guardar('MODAL_SERVICIO_MEDICO')">Guardar</button>
            </div>
        </div>
    </div>
</div>


