@model SACC.Client.Areas.Seguridad.Models.MiPerfilmodel


@{
    ViewBag.Title = "CambioContrasena";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><span>Seguridad </span></li>
                    <li class="active"><span>Mi Perfil </span></li>
                </ol>
            </div>

            <h2 class="font-light m-b-xs">Mi Perfil</h2>
            <small>Cat&aacute;logo de Usuario.</small>
        </div>
    </div>
</div>


<div class="content animate-panel">
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-body">
                    @using (Html.BeginForm("CambioContrasena", "Seguridad", FormMethod.Post))
                    {
                        <div role="form" class="form-horizontal">
                            <h3>Cambio de Contrase&ntilde;a</h3>
                            <h3>&nbsp;</h3>

                            <div class="form-group">
                                @Html.LabelFor(m => m.Contrasena, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10 col-lg-3">
                                    @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control input-sm", @readonly = "readonly" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.NuevaContrasena, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10 col-lg-3">
                                    @Html.PasswordFor(m => m.NuevaContrasena, new { @class = "form-control input-sm" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmarContrasena, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10 col-lg-3">
                                    @Html.PasswordFor(m => m.ConfirmarContrasena, new { @class = "form-control input-sm" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-8 col-sm-offset-2">
                                    @Html.ActionLink("Guardar", "Index", "Paquete", new { @class = "btn btn-primary btn-sm" })

                                    @Html.ActionLink("Regresar", "Perfil", "Seguridad", new { @class = "btn btn-default btn-sm" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>