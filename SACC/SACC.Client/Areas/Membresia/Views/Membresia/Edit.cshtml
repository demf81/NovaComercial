@model SACC.Client.Areas.Membresia.Models.MembresiaModel


@{
    Layout = "~/Views/Shared/_LayoutMembresia.cshtml";
}


@section Scripts {
    @if (TempData["lblNombre"] != null)
    {
        <script type="text/javascript">
            $("#lblNombre").html('@TempData["lblNombre"]');
            $("#imgFoto").attr('src', '@TempData["imgFoto"]');
        </script>
    };

    @if (TempData["text"] != null)
    {
        <script type="text/javascript">
            $(window).load(function () {
                $(document).ready(function () {
                    swal({
                        title: "@TempData["title"]",
                        text:  "@TempData["text"]",
                        type:  "@TempData["type"]",
                    });
                });
            });
        </script>
    };
}


<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><span>Ventas </span></li>
                    <li><span>Membresia </span></li>
                    <li class="active"><span>Editar </span></li>
                </ol>
            </div>

            <h2 class="font-light m-b-xs">Membresia</h2>
            <small>Venta de Membresia.</small>
        </div>
    </div>
</div>


<div class="content animate-panel">
    <div class="row rowDatosGenerales">
        <div class="col-lg-12">
            <div class="hpanel">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#tab-1">Datos Generales</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            @using (Html.BeginForm())
                            {
                                <div role="form" class="form-horizontal">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.MembresiaId, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10 col-lg-2">
                                            @Html.TextBoxFor(m => m.MembresiaId, new { @class = "form-control input-sm", @readonly = "readonly" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Fecha, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10 col-lg-3">
                                            <div class="input-group date">
                                                @Html.TextBoxFor(m => m.Fecha, "{0:yyyy-MM-dd}", new { @class = "form-control input-sm", @readonly = "readonly" })
                                                <span class="input-group-addon input-sm btn-sm disabled"><i class="fa fa-calendar"></i></span>
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Fecha, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Vigencia, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10 col-lg-3">
                                            <div class="input-group date">
                                                @Html.TextBoxFor(m => m.Vigencia, "{0:yyyy-MM-dd}", new { @class = "form-control input-sm", @readonly = "readonly" })
                                                <span class="input-group-addon input-sm btn-sm disabled"><i class="fa fa-calendar"></i></span>
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Vigencia, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.MembresiaTipoId, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10 col-lg-5">
                                            @Html.DropDownListFor(m => m.MembresiaTipoId, Model.MembresiaTipos, new { @class = "form-control input-sm" })
                                            @Html.ValidationMessageFor(m => m.MembresiaTipoId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Label(" ", new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10">
                                            <div class="checkbox">
                                                @Html.CheckBoxFor(m => m.AfiliadoAdicional, new { @class = "i-checks" }) &nbsp; Afiliados Adicionales
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.CantidaAfiliadoAdicional, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-1">
                                            @Html.TextBoxFor(m => m.CantidaAfiliadoAdicional, new { @class = "form-control input-sm", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(m => m.CantidaAfiliadoAdicional, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.PrecioMembresia, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10 col-lg-2">
                                            <div class="input-group">
                                                <span class="input-group-addon">$</span>
                                                @Html.TextBoxFor(m => m.PrecioMembresia, new { @class = "form-control input-sm text-right", @readonly = "readonly" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.PrecioMembresia, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.PrecioAdicionales, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10 col-lg-2">
                                            <div class="input-group">
                                                <span class="input-group-addon">$</span>
                                                @Html.TextBoxFor(m => m.PrecioAdicionales, new { @class = "form-control input-sm text-right", @readonly = "readonly" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.PrecioAdicionales, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.SubTotal, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10 col-lg-2">
                                            <div class="input-group">
                                                <span class="input-group-addon">$</span>
                                                @Html.TextBoxFor(m => m.SubTotal, new { @class = "form-control input-sm text-right", @readonly = "readonly" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.SubTotal, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Iva, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10 col-lg-2">
                                            <div class="input-group">
                                                <span class="input-group-addon">$</span>
                                                @Html.TextBoxFor(m => m.Iva, new { @class = "form-control input-sm text-right", @readonly = "readonly" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Iva, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Total, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10 col-lg-2">
                                            <div class="input-group">
                                                <span class="input-group-addon">$</span>
                                                @Html.TextBoxFor(m => m.Total, new { @class = "form-control input-sm text-right", @readonly = "readonly" })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Total, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Baja, new { @class = "col-sm-2 control-label" })
                                        <div class="col-sm-10">
                                            <div class="radio radio-inline">
                                                @Html.RadioButtonFor(m => m.Baja, false, new { @checked = "checked", @class = "i-checks" }) Activo
                                            </div>
                                            <div class="radio radio-inline">
                                                @Html.RadioButtonFor(m => m.Baja, true, new { @class = "i-checks", }) Inactivo
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group form-group-bottom">
                                        <div class="col-sm-8 col-sm-offset-2">
                                            <button class="btn btn-primary btn-sm" type="submit">Guardar</button>

                                            @Html.ActionLink("Regresar", "Index", "Membresia", new { @class = "btn btn-default btn-sm" })
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>