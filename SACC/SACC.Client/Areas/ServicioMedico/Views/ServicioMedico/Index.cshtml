@{
    Layout = "~/Views/Shared/_LayoutTarifa.cshtml";
}


@section Scripts {
    @if (TempData["lblNombre"] != null)
    {
        <script type="text/javascript">
            $("#lblNombre").html('@TempData["lblNombre"]');
            $("#imgFoto").attr('src', '@TempData["imgFoto"]');
        </script>
    };

    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/ServicioTipo/ServicioTipo.js"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/ServicioMedico/ServicioMedico.js"></script>
}


<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><span>Cat&aacute;logos </span></li>
                    <li class="active"><span>Servicios Medicos</span></li>
                </ol>
            </div>

            <h2 class="font-light m-b-xs">Servicio Medico</h2>
            <small>Cat&aacute;logo de Servicios Medicos.</small>
        </div>
    </div>
</div>


<div class="content animate-panel">
    <div class="row rowBusqueda">
        <div class="col-lg-12">
            <div class="hpanel hnova">
                <div class="panel-heading hbuilt">
                    <div class="panel-tools">
                        <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                    </div>
                    Opciones de B&uacute;squeda
                </div>
                <div class="panel-body">
                    <div role="form" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Estatus</label>
                            <div class="col-sm-10">
                                <div class="radio radio-inline">
                                    <input type="radio" id="rbEstatusId" name="rbEstatusId" value="1" class="i-checks" />
                                    <label>Activo</label>
                                </div>

                                <div class="radio radio-inline">
                                    <input type="radio" id="rbEstatusId" name="rbEstatusId" value="2" class="i-checks" />
                                    <label>Inactivo</label>
                                </div>

                                <div class="radio radio-inline">
                                    <input type="radio" id="rbEstatusId" name="rbEstatusId" value="-1" class="i-checks" checked="checked" />
                                    <label>Todos</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Descripci&oacute;n</label>
                            <div class="col-sm-10">
                                <input type="text" id="txtServicioDescripcion" name="txtServicioDescripcion" class="form-control input-sm" />
                                <span class="field-validation-valid text-danger" data-valmsg-for="ServicioDescripcion" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tipo de Servicio</label>
                            <div class="col-sm-10 col-lg-5">
                                <select id="ddlServicioTipoId" class="form-control input-sm"></select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-2">
                                <button class="btn btn-primary btn-sm" onclick="Servicio.buscar();">Buscar</button>

                                <button class="btn btn-default btn-sm" onclick="Servicio.limpiar();">Limpiar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel hnovagrey">
                <div class="panel-heading hbuilt">
                    <div class="panel-tools"></div>

                    &nbsp;
                </div>

                <div class="panel-body">
                    <table id="dgDatosServicio" data-height="430" data-classes="table table-hover table-condensed" data-striped="true" data-pagination="true">
                        @*<thead>
                    <tr>
                        <th data-field="ServicioId"                 data-sortable="true" data-align="center"><span>Folio</span></th>
                        <th data-field="ServicioDescripcion"        data-sortable="true"><span>Descripci&oacute;n</span></th>
                        <th data-field="ServicioTipoDescripcion"    data-sortable="true"><span>Tipo de Servicio</span></th>
                        <th data-field="Costo"                      data-sortable="true" data-align="right"><span>Costo ($)</span></th>
                        <th data-field="Baja"                       data-formatter="estatusFormatter" data-align="center"><span>Estatus</span></th>
                        <th data-formatter="operateActionFormatter_Servicio" data-align="center"><span>Acci&oacute;n</span></th>
                    </tr>
                </thead>*@
                    </table>
                </div>

                <div class="panel-footer">&nbsp;</div>
            </div>
        </div>
    </div>
</div>


