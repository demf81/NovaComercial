@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts {
    @if (TempData["lblNombre"] != null)
    {
        <script type="text/javascript">
            $("#lblNombre").html('@TempData["lblNombre"]');
            $("#imgFoto").attr('src', '@TempData["imgFoto"]');
        </script>
    };

    @*<script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/Estatus/Estatus.js" asp-append-version="true"></script>*@
    @*<script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/MotivoMovimientoTipo/MotivoMovimientoTipo.js" asp-append-version="true"></script>*@
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/ClienteTipo/ClienteTipo.js" asp-append-version="true"></script>
    <script type="text/javascript" src="@System.Configuration.ConfigurationManager.AppSettings["UrlPrincipal"].ToString()Scripts/Areas/Cliente/Cliente.js?" asp-append-version="true"></script>
}


<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <ol class="hbreadcrumb breadcrumb">
                    <li><span>Cat&aacute;logos </span></li>
                    <li><span>Clientes </span></li>
                    <li class="active"><span>Alta </span></li>
                </ol>
            </div>
            <h2 class="font-light m-b-xs">CLIENTES</h2>
            <small>Cat&aacute;logo de Clientes.</small>
        </div>
    </div>
</div>


<div class="content animate-panel">
    <div class="row rowTabDatosGenerales">
        <div class="col-lg-12">
            <div class="hpanel hnova">
                <div class="panel-heading hbuilt">
                    <div class="panel-tools"></div>

                    <button class="btn btn-primary btn-sm" onclick="Cliente.actualizar();">Actualizar</button>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button class="btn btn-default btn-sm" onclick="Cliente.redirecciona('CLIENTE_INDEX')">Regresar</button>
                </div>

                <div class="panel-body">
                    <div class="col-lg-12">
                        <div id="rootwizard" class="tabbable">
                            <ul>
                                <li><a href="#tab1" data-toggle="tab">Datos Generales</a></li>
                            </ul>

                            <div class="tab-content">
                                <div class="tab-pane" id="tab1">
                                    <div class="col-lg-12">
                                        <div class="row">
                                            <div role="form" class="form-horizontal">
                                                <div class="row">
                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Folio</label>
                                                        <div class="col-sm-10 col-lg-2">
                                                            <input type="text" id="txtClienteId" name="txtClienteId" class="form-control input-sm" , readonly="readonly" value="@ViewBag.ClienteId" />
                                                            <span class="field-validation-valid text-danger" data-valmsg-for="ClienteId" data-valmsg-replace="true"></span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Descripci&oacute;n</label>
                                                        <div class="col-sm-10">
                                                            <input type="text" id="txtClienteDescripcion" name="txtClienteDescripcion" class="form-control input-sm" />
                                                            <span class="field-validation-valid text-danger" data-valmsg-for="ClienteDescripcion" data-valmsg-replace="true"></span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Descripci&oacute;n Corta</label>
                                                        <div class="col-sm-10 col-lg-2">
                                                            <input type="text" id="txtClienteDescripcionCorta" name="txtClienteDescripcionCorta" class="form-control input-sm" />
                                                            <span class="field-validation-valid text-danger" data-valmsg-for="ClienteDescripcionCorta" data-valmsg-replace="true"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Tipo de Cliente</label>
                                                        <div class="col-sm-10 col-lg-2">
                                                            <select id="ddlClienteTipoId" name="ddlClienteTipoId" class="form-control input-sm"></select>
                                                            <span class="field-validation-valid text-danger" data-valmsg-for="ClienteTipoId" data-valmsg-replace="true"></span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Baja Programada</label>
                                                        <div class="col-sm-10 col-lg-2 i-checks">
                                                            <input type="checkbox" id="chkBajaProgramada" name="chkBajaProgramada">
                                                            <span class="field-validation-valid text-danger" data-valmsg-for="chkBajaProgramada" data-valmsg-replace="true"></span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Fecha Programada</label>
                                                        <div class="col-sm-10 col-lg-2">
                                                            <div class="input-group date">
                                                                <input class="form-control input-sm" id="dtpFechaBajaProgramada" name="dtpFechaBajaProgramada" readonly="readonly" disabled />
                                                                <span class="input-group-addon input-sm btn-sm"><i class="fa fa-calendar"></i></span>
                                                            </div>
                                                            <span class="field-validation-valid text-danger" data-valmsg-for="FechaBajaProgramada" data-valmsg-replace="true"></span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group ">
                                                        <label class="col-sm-2 control-label">Inicio de Operaciones</label>
                                                        <div class="col-sm-10 col-lg-2">
                                                            <div class="input-group date">
                                                                <input class="form-control input-sm" id="dtpInicioOperaciones" name="dtpInicioOperaciones" readonly="readonly" />
                                                                <span class="input-group-addon input-sm btn-sm"><i class="fa fa-calendar"></i></span>
                                                            </div>
                                                            <span class="field-validation-valid text-danger" data-valmsg-for="InicioOperaciones" data-valmsg-replace="true"></span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="col-sm-2 control-label">Estatus</label>
                                                        <div class="col-sm-10">
                                                            <label class="radio radio-inline">
                                                                <input type="radio" class="i-checks" id="rbEstatusId" name="rbEstatusId" value="1" /> Activo
                                                            </label>
                                                            <label class="radio radio-inline">
                                                                <input type="radio" class="i-checks" id="rbEstatusId" name="rbEstatusId" value="2" /> Inactivo
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel-footer">&nbsp;</div>
            </div>
        </div>
    </div>
</div>


<input type="hidden" id="txtApuntadorCliente" value="CLIENTE_EDIT" />