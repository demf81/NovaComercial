@model PortalEmpresa.Client.Models.LoginModel


@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}


@section Scripts {
    @if (TempData["text"] != null) {
        <script type="text/javascript">
            $(window).load(function () {
                $(document).ready(function () {
                    swal({
                        title: '@TempData["title"]',
                        text: decodeURIComponent('@TempData["text"]'),
                        type: '@TempData["type"]',
                    });
                });
            });
        </script>
    };
}


<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>Validaci&oacute;n de Acceso</h3>
                @*<small>This is the best app ever!</small>*@
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        <div role="form" id="loginForm">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Correo, new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.Correo, new { @class = "form-control input-sm", @placeholder = "example@gmail.com" })
                                @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
                            </div>
                        
                            <div class="form-group">
                                @Html.LabelFor(m => m.Contrasenia, new { @class = "control-label" })
                                @Html.PasswordFor(m => m.Contrasenia, new { @class = "form-control input-sm", @placeholder = "******" })
                                @Html.ValidationMessageFor(m => m.Contrasenia, "", new { @class = "text-danger" })
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Entrar</button>

                            <div class="form-group">
                                
                            </div>

                            <div class="form-group">
                                @Html.ActionLink("¿Olvidaste tu contraseña?", "RestablecerContrasena", "Seguridad", new { Area = "Seguridad" }, new { @class = "text-success font-bold" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            @*<strong>HOMER</strong> - AngularJS Responsive WebApp <br />*@ 2018 Copyright NOVA
        </div>
    </div>
</div>